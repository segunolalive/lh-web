---
permalink: /
---
{% extends "base.njk" %}

{% set newsFeed = collections.newsFeed %}

{% block content %}
    <header class="section">
        <div class="active panel">
    <div id="overlay"></div>
          <ul id="preview-slider" class="slider" data-options="arrows:true,nav:true,perView:1,autoplay:true,animationDuration: 4800,rewindDuration: 2400">
            <li>
              <a class="img-box" href="#">
                <img src="media/lighthouse-background-04.jpg" class="slider-image" alt="">
              </a>
            </li>
            <li>
              <a class="img-box" href="#">
                <img src="media/lighthouse-background-03.jpg" class="slider-image" alt="">
              </a>
            </li>
            <li>
              <a class="img-box" href="#">
                <img src="media/lighthouse-background-04.jpg" class="slider-image" alt="">
              </a>
            </li>
          </ul>
          <div class="row align-items-center" data-anima="fade-in" data-time="1000">
        <div class="col-lg-6 slider-text">
          <h1>
            {{home.headline}}
          </h1>
          <h3>
            {{home.subHead}}
          </h3>
          <hr class="space">
          <a href="/signup" class="btn btn-circle btn-sm">Verify Debt Status</a>
          <hr class="space-lg">
        </div>
      </div>
      </div>
    </header>
  <section id="features" class="section-base section-color">
    <div class="container">
      <h2 class="align-center">{{home.summary[0].headline}}</h2>
      <p class="align-center width-650">
        {{home.summary[0].subHead}}
      </p>
      <hr class="space"/>
      <div class="grid-list" data-columns="3" data-columns-md="2" data-columns-xs="1">
        <div class="grid-box">

        {% set icons = ["im-laptop-3", "im-bar-chart4", "im-shuffle-4"] %}
        {% for column in home.summary[0].columns %}
          <div class="grid-item">
            <div class="cnt-box cnt-box-top-icon boxed">
              <i class="{{icons[loop.index0]}}"></i>
              <div class="caption">
                <h2>{{column.headline}}</h2>

                <p>
                  {{column.content}}
                </p>
              </div>
            </div>
          </div>
        {% endfor %}

        </div>
      </div>
    </div>
  </section>
  <section class="section-block section-block-full section-block-right">
    <div class="block-media">
      <div class="image" data-parallax="scroll" data-bleed="0" data-image-src="/media/{{home.callout[0].background}}"></div>
    </div>
    <div class="overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: #17452666;"></div>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>{{home.callout[0].headline}}</h2>
          <p>
            {{home.callout[0].content}}
          </p>
        </div>
        <div class="col"></div>
      </div>
    </div>
  </section>
  <section id="overview" class="section-base section-top-overflow">
    <div class="container">
      <br />
      <hr class="space-lg"/>
      <div class="row">
        <div class="col-lg-6 order-md-first">
          <h2>{{home.extraSummary[0].headline}}</h2>
          <p>
            {{home.extraSummary[0].content}}
          </p>
          <hr class="space-sm visible-md"/>
        </div>
        <div class="col-lg-6" data-anima="fade-right" data-time="1000">
          <img class="margin-11" src="/media/{{home.extraSummary[0].image}}" alt=""/>
        </div>
      </div>
      <br />
    </div>
  </section>
  <section class="section-image light bg-green">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8 col-md-8">
          <h2>{{home.verify[0].headline}}</h2>
          <p>
            {{home.verify[0].summary}}
          </p>
        </div>
        <div class="col-lg-4 col-md-4 align-right align-left-sm">
          <a href="/signup" class="btn btn-circle btn-sm">Verify Now</a>
        </div>
      </div>
    </div>
  </section>
  <section id="news" class="section-base section-color">
    <div class="container">
      <h2 class="align-center">Latest News
      </h2>
      <p class="width-650 align-center">
        Here are the latest news and happenings within the Ministry, her Departments and Agencies.
      </p>
      <hr class="space"/>



    <div class="row">
      <div class="col">
          <div class="grid-list" data-columns="2">
            <div class="grid-box">
            {% for item in newsFeed %}
              <div class="grid-item">
                <div class="cnt-box cnt-box-blog-side boxed" data-href="{{item.url}}">
                  <a href="{{item.url}}" class="img-box">
                    <img src="{{'/media/' + item.data.image}}" alt=""/>
                  </a>
                  <div class="caption">
                    <h2>
                      {{item.data.headline}}
                    </h2>
                    <div class="clamp-three-lines">
                      {{ item.templateContent | markdownFilter | safe }}
                    </div>
                  </div>
                </div>
              </div>
            {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {% include "partials/stakeholders.njk" %}}

  <section class="section-base align-center bg-shade">
    <div class="container">
      <h2>Subscribe now.</h2>
      <div class="width-650">
        <p>Stay updated with the latest reports on project lighthouse</p>
        <hr class="space-sm"/>
        <form action="themekit/scripts/contact-form/contact-form.php" class="form-box form-ajax form-inline align-center" method="post" data-email="example@domain.com">
          <div class="row">
            <div class="col-lg-4">
              <input id="name" name="name" placeholder="Name" type="text" class="input-text" required="required">
            </div>
            <div class="col-lg-4">
              <input id="email" name="email" placeholder="Email" type="email" class="input-text" required="required">
            </div>
            <div class="col-lg-4">
              <button class="btn btn-sm" type="submit">Subscribe</button>
            </div>
          </div>
          <div class="form-checkbox">
            <input type="checkbox" id="check" name="check" value="check" required="required">
            <label for="check">You accept the terms of service and the privacy policy</label>
          </div>
          <div class="success-box">
            <div class="alert alert-success">Congratulations. Your message has been sent successfully
            </div>
          </div>
          <div class="error-box">
            <div class="alert alert-warning">Error, please retry. Your message has not been sent</div>
          </div>
        </form>
      </div>
    </div>
  </section>
{% endblock %}